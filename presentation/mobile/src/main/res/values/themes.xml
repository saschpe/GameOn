<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="App.DayNight" parent="Base.App">

        <!--Component styles-->
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
        <item name="appBarLayoutStyle">@style/Widget.App.AppBar</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigation</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>

    </style>

    <style name="App.DayNight.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="App.DayNight.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="App.DayNight.Splash">
        <item name="android:navigationBarColor">@color/color_secondary</item>
        <item name="android:statusBarColor">@color/color_secondary</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>
